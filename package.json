{
  "name": "api-base-typescript",
  "version": "1.0.0",
  "description": "API Base Typescript",
  "author": "Marcos Vinicius <viniciusmr1499@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=14.5.0",
    "npm": "please-use-yarn",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "build": "rimraf dist/ && babel src --extensions '.ts' --out-dir dist --copy-files --no-copy-ignored",
    "clear": "rimraf dist/",
    "dev": "tsnd -r tsconfig-paths/register --inspect=0.0.0.0 --respawn --ignore-watch node_modules --transpile-only --no-notify -- src/index.ts",
    "lint": "eslint 'src/**/*.ts' --quiet --fix",
    "start": "node dist/index.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm --config ./src/config/ormconfig.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@tsed/cli": "^2.10.0",
    "@types/express": "^4.17.11",
    "@types/express-mung": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.1",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.0",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@azure/arm-keyvault": "^1.2.1",
    "@azure/identity": "^1.2.2",
    "@azure/keyvault-secrets": "^4.1.0",
    "@decorators/di": "^1.0.2",
    "@decorators/express": "^2.4.0",
    "@tsed/common": "^6.24.0",
    "@tsed/core": "^6.24.0",
    "@tsed/di": "^6.24.0",
    "@tsed/exceptions": "^6.24.0",
    "@tsed/json-mapper": "^6.24.0",
    "@tsed/platform-express": "^6.24.0",
    "@tsed/schema": "^6.24.0",
    "@tsed/swagger": "^6.24.0",
    "@tsed/typeorm": "^6.25.1",
    "celebrate": "^13.0.4",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mung": "^0.5.1",
    "globby": "^11.0.2",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "mssql": "^6.2.3",
    "mysql": "^2.18.1",
    "npm-force-resolutions": "^0.0.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "typeorm": "^0.2.30"
  },
  "resolutions": {
    "source-map-resolve": "^0.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
